# Example Environment Variables for Cloud Functions
# Copy this to .env and fill in your actual values

# App Configuration
APP_URL=https://yourapp.com

# Stripe Configuration (get these from Stripe Dashboard)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# RevenueCat Configuration (get from RevenueCat Dashboard)
REVENUECAT_WEBHOOK_SECRET=your_revenuecat_webhook_secret_here

# Receipt Tier Limits (adjust as needed)
STARTER_TIER_MAX_RECEIPTS=50
GROWTH_TIER_MAX_RECEIPTS=150
PROFESSIONAL_TIER_MAX_RECEIPTS=-1
TEAMMATE_TIER_MAX_RECEIPTS=-1

# Environment
NODE_ENV=production

# Feature Flags
# DeviceChecker Feature Flag (set to "true" to enable, "false" to disable)
ENABLE_DEVICE_CHECK=true