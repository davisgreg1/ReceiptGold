{
  "name": "functions",
  "description": "Cloud Functions for Firebase - ReceiptGold",
  "scripts": {
    "lint": "eslint --ext .js,.ts, .",
    "build": "tsc",
    "serve": "npm run build && npx firebase emulators:start --only functions",
    "shell": "npm run build && npx firebase functions:shell",
    "start": "npm run shell",
    "deploy": "npx firebase deploy --only functions",
    "logs": "npm run build && npx firebase functions:log",
    "init:categories": "node scripts/initializeCategories.js",
    "init:categories:ts": "npx ts-node scripts/initializeCategories.ts",
    "init:test-user": "npx ts-node scripts/setupTestUser.ts",
    "init:usage": "npx ts-node scripts/initializeUsage.ts",
    "init:all": "npm run init:categories && npm run init:test-user",
    "dev:setup": "npm run init:categories && npm run init:test-user && npm run serve",
    "dev:reset": "npm run cleanup:test-data && npm run init:categories",
    "cleanup:test-data": "node scripts/cleanupTestData.js",
    "db:backup": "node scripts/backupData.js",
    "db:restore": "node scripts/restoreData.js",
    "db:seed": "npm run init:categories && npm run init:test-user",
    "stripe:test": "node scripts/testStripe.js",
    "stripe:webhook": "stripe listen --forward-to http://localhost:8081/receiptgold/us-central1/stripeWebhook"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/index.js",
  "dependencies": {
    "expo-sharing": "^13.1.5",
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^6.4.0",
    "react-native-chart-kit": "^6.12.0",
    "stripe": "^14.25.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.0"
  },
  "private": true,
  "version": "1.0.0",
  "keywords": [],
  "author": "",
  "license": "ISC"
}
