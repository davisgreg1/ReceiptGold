{
  "expo": {
    "name": "ReceiptGold",
    "slug": "receiptgold",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.receiptgold.app",
      "buildNumber": "1"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.receiptgold.app",
      "versionCode": 1,
      "permissions": ["CAMERA", "INTERNET", "ACCESS_NETWORK_STATE"],
      "config": {
        "usesCleartextTraffic": true
      }
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "name": "ReceiptGold",
      "shortName": "ReceiptGold",
      "description": "Premium receipt management for LLCs"
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      },
      "FREE_TIER_MAX_RECEIPTS": "10",
      "STARTER_TIER_MAX_RECEIPTS": "50",
      "GROWTH_TIER_MAX_RECEIPTS": "150",
      "PROFESSIONAL_TIER_MAX_RECEIPTS": "-1"
    },
    "plugins": [
      "expo-splash-screen",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "$(PRODUCT_NAME) needs access to your Camera.",
          "enableMicrophonePermission": false,
          "microphonePermissionText": "$(PRODUCT_NAME) needs access to your Microphone."
        }
      ]
    ]
  }
}
