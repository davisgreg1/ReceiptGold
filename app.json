{
  "expo": {
    "name": "ReceiptGold",
    "scheme": "receiptgold",
    "slug": "receiptgold",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.receiptgold.app",
      "buildNumber": "1",
      "infoPlist": {
        "LSApplicationQueriesSchemes": ["plaid"],
        "NSCameraUsageDescription": "$(PRODUCT_NAME) needs access to your Camera."
      }
    },
    "android": {
      "package": "com.receiptgold.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.RECORD_AUDIO"
      ],
      "config": {},
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "name": "ReceiptGold",
      "shortName": "ReceiptGold",
      "description": "Premium receipt management for LLCs"
    },
    "extra": {
      "FREE_TIER_MAX_RECEIPTS": "10",
      "STARTER_TIER_MAX_RECEIPTS": "50",
      "GROWTH_TIER_MAX_RECEIPTS": "150",
      "PROFESSIONAL_TIER_MAX_RECEIPTS": "-1",
      "USE_DUMMY_DATA": "false",
      "eas": {
        "projectId": "d191a88f-30f6-4f6c-bab7-5558207938be"
      }
    },
    "plugins": [
      "expo-splash-screen",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "$(PRODUCT_NAME) needs access to your Camera."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you select a receipt."
        }
      ],
      [
        "@react-native-firebase/app"
      ],
      [
        "@react-native-firebase/messaging"
      ],
      [
        "@config-plugins/react-native-blob-util"
      ],
      [
        "@config-plugins/react-native-pdf"
      ]
    ],
    "owner": "davisgreg1"
  }
}
