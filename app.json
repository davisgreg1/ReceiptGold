{
  "expo": {
  "name": "ReceiptGold",
  "scheme": "receiptgold",
    "slug": "receiptgold",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "fonts": [
      "./assets/fonts/PlayfairDisplay-Regular.ttf",
      "./assets/fonts/PlayfairDisplay-Bold.ttf", 
      "./assets/fonts/Inter-Regular.ttf",
      "./assets/fonts/Inter-Medium.ttf",
      "./assets/fonts/Inter-SemiBold.ttf",
      "./assets/fonts/Inter-Bold.ttf",
      "./assets/fonts/Poppins-Regular.ttf",
      "./assets/fonts/Poppins-Medium.ttf",
      "./assets/fonts/Poppins-SemiBold.ttf",
      "./assets/fonts/Poppins-Bold.ttf"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.receiptgold.app",
      "buildNumber": "1",
      "infoPlist": {
        "LSApplicationQueriesSchemes": ["plaid"]
      }
    },
    "android": {
      "package": "com.receiptgold.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "versionCode": 1,
      "permissions": ["CAMERA", "INTERNET", "ACCESS_NETWORK_STATE"],
      "config": {
        "usesCleartextTraffic": true
      }
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "name": "ReceiptGold",
      "shortName": "ReceiptGold",
      "description": "Premium receipt management for LLCs"
    },
    "extra": {
      "eas": {
        "projectId": "receiptgold"
      },
      "FREE_TIER_MAX_RECEIPTS": "10",
      "STARTER_TIER_MAX_RECEIPTS": "50",
      "GROWTH_TIER_MAX_RECEIPTS": "150",
      "PROFESSIONAL_TIER_MAX_RECEIPTS": "-1",
      "USE_DUMMY_DATA": "false"
    },
    "plugins": [
      "expo-splash-screen",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "$(PRODUCT_NAME) needs access to your Camera."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you select a receipt."
        }
      ],
      [
        "@react-native-firebase/app",
        {
          "android": {
            "googleServicesFile": "./google-services.json"
          },
          "ios": {
            "googleServicesPlist": "./GoogleService-Info.plist"
          }
        }
      ],
      [
        "@react-native-firebase/messaging",
        {
          "android": {
            "requestPermission": true,
            "authorizationOptions": ["alert", "badge", "sound"],
            "notificationBackgroundColor": "#FFD700"
          },
          "ios": {
            "requestPermission": true,
            "authorizationOptions": ["alert", "badge", "sound"]
          }
        }
      ]
    ]
  }
}
